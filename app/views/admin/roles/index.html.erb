<section class="content container-fluid">

  <div class="row">

    <!-- Alerts -->
    <div class="col-sm-12">

    </div>
    <!-- /. alerts -->

    <div class="col-sm-12">
      <div class="box box-primary">

        <div class="box-header with-border">
          <h3 class="box-title">Roles</h3>
          <div class="box-tools pull-right">

            <%= link_to '<i class="fa fa-plus-circle"></i> <span>New</span>'.html_safe,
                new_admin_role_path,
                :class => "btn btn-success" %>

            <button class="btn btn-box-tool" type="button" data-widget="collapse">
              <i class="fa fa-minus"></i>
            </button>
          </div>
        </div><!-- /. box header -->

        <div class="box-body no-padding">
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th class="text-center">Action</th>
                <th class="col-sm-12">Name</th>
                <th class="text-center">Status</th>
              </tr>
            </thead>
            <tbody>

            <% @resources.each do |r| %>
              <tr>
                <td><%= r.id %></td>
                <td class="text-nowrap">
                  <%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_role_path(r), :method => :delete, :class => 'btn btn-danger btn-xs', :data => { :confirm => 'Are you sure?',  } %></td>
                </td>
                <td><%= link_to r.name, edit_admin_role_path(r) %></td>
                <td><span class=""><%= r.status %></span></td>
              </tr>
              <% end %>

            </tbody>
          </table>
          <div class="col-sm-12">
            <div class="text-right"></div>
          </div>
        </div><!-- /. box-body -->

      </div><!-- /. box -->
    </div><!-- /. col -->
  </div><!-- /. row -->

</section><!-- /. content -->