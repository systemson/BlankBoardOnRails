<%= javascript_include_tag 'jquery.min', 'bootstrap.min', 'adminlte.min', 'chosen.jquery.min', 'rails-ujs' %>
<script type="text/javascript" >
// jQuery no Conflict
jQuery.noConflict()

// Bootstrap - show selected tab on reload
jQuery(function() {
    jQuery('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        // save the latest tab
        localStorage.setItem('lastTab', jQuery(this).attr('href'));
    });

    // go to the latest tab, if it exists:
    var lastTab = localStorage.getItem('lastTab');
    if (lastTab) {
        jQuery('[href="' + lastTab + '"]').tab('show');
    }
});

// Chosen plugin
jQuery(document).ready(function(){
    jQuery(".chosen-select").chosen({width: "100%"})
});
</script>