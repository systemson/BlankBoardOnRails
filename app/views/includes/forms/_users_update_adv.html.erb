<%= form_for @resource, url: {action: "update"}, html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <div class="col-sm-12 text-right">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.button "Reset", type: :reset, :class => "btn btn-default" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:user, "User", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_field :user, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:name, "Name", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_field :name, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:last_name, "Last Name", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_field :last_name, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:email, "Email", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_field :email, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:status, "Status", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.select :status, options_for_select([['Active', 1], ['Inactive', 0]], f.object.status), {}, {:class => 'form-control chosen-select'} %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:description, "Description", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_area :description, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:role_ids, "Roles", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.collection_select :role_ids, Role.all, :id, :name, {:selected => f.object.roles.collect {|p| p.id}}, {:class => 'form-control chosen-select', :multiple => 'multiple'} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <p class="text-red"><strong>Required fields</strong></p>
    </div>
  </div>

<% end %>
