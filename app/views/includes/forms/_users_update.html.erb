<%= form_for @resource, url: {action: "update"}, html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <div class="col-sm-12 text-right">
      <%= f.submit "Save", :class => "btn btn-success" %>
      <%= f.button "Reset", type: :reset, :class => "btn btn-default" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:name, "Name", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_field :name, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:last_name, "Last Name", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_field :last_name, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:description, "Description", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
     <%= f.text_area :description, class: 'col-sm-12 control-form' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <p class="text-red"><strong>Required fields</strong></p>
    </div>
  </div>

<% end %>
