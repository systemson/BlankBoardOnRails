<%= form_for @resource, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>

  <div class="col-sm-12 form-horizontal">

    <div class="form-group">
      <div class="col-sm-12 text-right">
        <%= f.button '<i class="fa fa-envelope-o"></i> Send'.html_safe, :name => 'status', :value => 1, :type => 'input', :class => "btn btn-primary" %>
        <%= f.button '<i class="fa fa-pencil"></i> Draft'.html_safe, :name => 'status', :value => 0, :type => 'input', :class => "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">
     <%= f.collection_select :recipient_ids, User.where.not(id: auth_user.id), :id, :name, {:selected => f.object.recipient_ids.collect {|p| p.id}}, {:class => 'form-control chosen-select', :multiple => 'multiple'} %>
    </div>

    <div class="form-group">
       <%= f.text_field :subject, class: 'col-sm-12 control-form', placeholder: 'Subject' %>
    </div>

    <div class="form-group">
      <%= f.text_area :body, class: 'col-sm-12 control-form', rows: 10 %>
    </div>

  </div>

<% end %>
