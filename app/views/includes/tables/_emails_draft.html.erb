<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th></th>
      <th>To</th>
      <th class="col-sm-12">Subject</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |r| %>
      <tr>
        <td>
          <label class="label label-default">
            <i class="fa fa-pencil"></i>
          </label>
        </td>
        <td class="mailbox-name text-nowrap">To</td>
        <td><%= r.subject %></td>
        <td class="text-nowrap"><%= r.created_at %></td>
        <td>Delete</td>
      </tr>
    <% end.empty? and begin %>
    <tr>
      <td colspan="5">This folder is empty.</td>
    </tr>
    <% end %>
  </tbody>
</table>