<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th></th>
      <th>From</th>
      <th class="col-sm-12">Subject</th>
      <th>Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @resources.each do |r| %>
      <tr>
        <td>
          <label class="label label-default"><i class="fa fa-trash"></i></label>
        </td>
        <td class="mailbox-name text-nowrap"><%= r.name %></td>
        <td><%= r.subject %></td>
        <td class="text-nowrap"><%= r.created_at %></td>
        <td>Restore</td>
        <td>Delete</td>
      </tr>
    <% end.empty? and begin %>
    <tr>
      <td colspan="5">This folder is empty.</td>
    </tr>
    <% end %>
  </tbody>
</table>
