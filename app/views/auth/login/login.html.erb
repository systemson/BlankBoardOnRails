<section class="content container-fluid">

  <div class="col-sm-offset-2 col-sm-8">

    <div class="row">

      <!-- Alerts -->
      <div class="col-sm-12">

      </div>
      <!-- /. alerts -->

      <div class="col-sm-12">
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Login</h3>
            <div class="box-tools pull-right">
              <button class="btn btn-box-tool" type="button" data-widget="collapse">
                <i class="fa fa-minus"></i>
              </button>
            </div>
          </div><!-- Box header -->

          <div class="box-body">
            <%= form_tag({controller: 'login', action: 'auth'}, method: 'post', class: 'form-horizontal') do %>

              <div class="form-group">
                <%= label_tag 'user', 'User', class: 'col-sm-4 control-label' %>
                <div class="col-sm-6">
                  <%= text_field_tag 'user', '', class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag 'name', 'Password', class: 'col-sm-4 control-label' %>
                <div class="col-sm-6">
                  <%= password_field_tag 'password', '', class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-6">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="remember" {{ old('remember') ? 'checked' : '' }}> {{ __('auth.remember') }}
                    </label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <%= submit_tag "Save", :class => "btn btn-success" %>
                  <a class="btn btn-link" href="{{ route('password.request') }}">{{ __('auth.forgot') }}</a>
                </div>
              </div>

            <% end %>

           <div class="col-sm-12 text-center">
             <a class="btn btn-link" href="{{ route('register') }}">{{ __('auth.unregistered') }}</a>
           </div>

          </div><!-- /. box body -->

        </div><!-- /. box -->

      </div><!-- /. col -->
    </div><!-- /. row -->

  </div><!-- /. col -->

</section>
